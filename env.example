# Server
PORT=3000
NODE_ENV=development

# Database (PostgreSQL)
# Use DATABASE_URL for the app; use DB_* below for drizzle-kit migrations if not using DATABASE_URL
DATABASE_URL=postgresql://user:password@localhost:5432/chat

# For drizzle.config.ts (migrations) - optional if DATABASE_URL is set
DB_HOST=localhost
DB_PORT=5432
DB_USER=user
DB_PASSWORD=password
DB_NAME=chat

# Redis
REDIS_URL=redis://127.0.0.1:6379
REDIS_TYPING_TTL=5
REDIS_PRESENCE_TTL=60

# JWT (generate strong secrets in production)
JWT_ACCESS_SECRET=your-access-secret-change-me
JWT_REFRESH_SECRET=your-refresh-secret-change-me
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d

# Uploads (base URL for served files)
UPLOAD_BASE_URL=http://localhost:3000/uploads
